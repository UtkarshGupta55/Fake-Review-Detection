{
  "manifest_version": 3,
  "name": "Review Authenticity Analyzer",
  "version": "1.0",
  "description": "Professional tool for analyzing the authenticity of online product reviews",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon" : {"267" : "icon.png"}
  },
  "icon": {

    "267" : "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
